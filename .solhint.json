{
  "extends": ["solhint:recommended"],
  "rules": {
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "quotes": ["error", "double"],
    "compiler-version": ["error", "^0.6.0"],
    "max-line-length": ["error", 120]
  },
  "plugins": ["prettier"]
}
